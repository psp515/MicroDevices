{
    "baseDeviceTopic":"plantMonitor/",
    "mode": "debug",
    "Connection":
    {
        "Wifi":
        {
            "ssid": "your_ssid",
            "password": "your_password",
            "maxConnectionTime": 15
        },
        "MQTT":
        {
            "type" : "HiveMq",
            "server": "your_mqtt_server",
            "port": 1883,
            "user": "your_mqtt_user",
            "password": "your_mqtt_password",
            "clientId": "your_client_id",
            "ssl": false,
            "keepAlive": 60
        }
    },
    "Logs":
    {
        "Local":
        {
            "localFile": "logs_*.txt",
            "level": "error",
            "enabled": true
        }
    },
    "Devices":
    {
        "temperatureSensor":
        {
            "id": 1,
            "type": "dht11",
            "dataPin": 0,
            "groundPin": 38,
            "vccPin": 36,
            "tempThreshold":
            {
                "type": "degrees",
                "value": 1,
                "defaultUnit": "C"
            },
            "c":
            {
                "type": "percent",
                "value": 1,
                "defaultUnit": "%"
            },
            "topic": "temperature",
            "updateTopic": "temperature/update"
        },
        "SoilMoistureSensors":
        [
            {
                "id": 2,
                "type": "analog",
                "dataPin": 1,
                "groundPin": 38,
                "vccPin": 36,
                "threshold":
                {
                    "type": "percent",
                    "value": 2,
                    "unit": "%"
                },
                "topic": "sms/analog",
                "updateTopic": "sms/analog/update"
            }
        ]
    }
}